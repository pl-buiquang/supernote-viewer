{
  "identifier": "desktop-capability",
  "platforms": [
    "macOS",
    "windows",
    "linux"
  ],
  "windows": [
    "main"
  ],
  "permissions": [
    "cli:default",
    "dialog:allow-open",
    "fs:default",
    "fs:read-all",
    "fs:write-all",
    "fs:allow-rename",
    "fs:allow-mkdir",
    "fs:allow-exists",
    "fs:allow-watch",
    "fs:read-dirs",
    {
      "identifier": "fs:scope",
      "allow": ["**/*", "$APPLOCALDATA/**/*"]
    },
    "store:default",
    "core:event:default",
    "deep-link:default",
    "deep-link:allow-get-current"
  ]
}